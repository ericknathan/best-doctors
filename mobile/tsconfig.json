{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "baseUrl": "./src/",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "exclude": [
    "build", "node_modules", "static", "babel.config.js", "metro.config.js", "jest.config.js"
  ]
}
